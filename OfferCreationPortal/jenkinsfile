pipeline {
    agent { label 'ubuntu' }  // matches your ubuntu-agent node
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/jadhavprat/offercreation.git',
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build -- --prod'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }
    }
}
